<h1>Listing Articles kombajn</h1>

<table>
  <thead>
    <tr>
      <th>Je to bagr?</th>
      <th>Title</th>
      <th>Category</th>
      <th>Text</th>
      <th>Is published</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>NE</td>
        <td><%= article.title %></td>
        <td><%= article.category.name if article.category.present? %></td>
        <td><%= article.text %></td>
        <td><%= article.is_published %></td>
        <td><%= article.published_at %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

